// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Club {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  badge      String
  colors     String[]
  lastTitles Title[]
}

model Title {
  id     Int     @id @default(autoincrement())
  name   String
  season String?
  date   String

  club   Club @relation(fields: [clubId], references: [id])
  clubId Int
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String
  password String
}